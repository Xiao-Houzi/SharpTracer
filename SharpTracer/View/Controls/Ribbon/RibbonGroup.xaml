<UserControl x:Class="SharpTracer.View.Controls.RibbonGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpTracer.View.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:RibbonCommandVM}">
            <local:RibbonCommand/>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="ItemsPanelTemplate1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0"/>
        </ItemsPanelTemplate>
    </UserControl.Resources>

    <Border BorderThickness="0,0,1,0" BorderBrush ="DarkGray" >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <ItemsControl ItemsSource="{Binding Commands}"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="0"
                      MinHeight="30"
                  ItemsPanel="{StaticResource ItemsPanelTemplate1}" />

            <StackPanel MinWidth="30" MinHeight="14">
                <Label Content="{Binding Title}" FontSize="12" HorizontalAlignment="Center" Padding="5,0"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
