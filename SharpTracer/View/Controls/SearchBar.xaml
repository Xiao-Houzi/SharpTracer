<UserControl x:Class="SharpTracer.View.Controls.SearchBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpTracer.View.Controls"
        mc:Ignorable="d"
       d:DesignHeight="20" d:DesignWidth="200">
	<Border DockPanel.Dock="Bottom" CornerRadius="10" Background="White">

        <DockPanel Margin="1" DockPanel.Dock="Top">
			<Button DockPanel.Dock="Right"  Command="{Binding CommandSearch}" FontFamily="Segoe UI Symbol" Content=""  Background="{x:Null}" Padding="0" Margin="0,0,5,0" />
			<TextBox Margin="5,0" BorderThickness="0"
					 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">

			</TextBox>
		</DockPanel>
	</Border>
</UserControl>
