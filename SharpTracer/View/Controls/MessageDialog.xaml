<Window x:Class="SharpTracer.View.Controls.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SharpTracer.View.Controls"
        mc:Ignorable="d" 
        Height="Auto" Topmost="True" SizeToContent="WidthAndHeight" MinWidth="300" MaxWidth="500" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="25">
        <TextBlock Name="ContentText" TextWrapping="Wrap" DockPanel.Dock="Top" MaxWidth="300" Text="Line1&#10;Line2"><Run Text="This is a sample of the content displayed in this dialog."/><LineBreak/><Run Text="How do we show line breaks?"/></TextBlock>
        <Button Style="{StaticResource BasicButton}" DockPanel.Dock="Bottom" Content="OK" VerticalAlignment="Bottom" Click="Button_Click" Margin="50,20,50,0"></Button>
    </DockPanel>
</Window>
