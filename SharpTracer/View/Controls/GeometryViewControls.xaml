<UserControl x:Class="SharpTracer.View.Controls.GeometryViewControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpTracer"
             xmlns:controls="clr-namespace:SharpTracer.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1000">
    <StackPanel >
        <controls:ControlRibbon DataContext="{Binding Ribbon}"/>
        <StackPanel Orientation="Horizontal">
            <local:GeometryControl DataContext="{Binding GeometryPanel}"/>
            <local:AdjustmentControls DataContext="{Binding AdjustmentControls}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
