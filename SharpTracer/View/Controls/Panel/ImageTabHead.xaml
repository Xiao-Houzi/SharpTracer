<UserControl x:Class="SharpTracer.View.Controls.ImageTabHead"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpTracer.View.Controls"
             mc:Ignorable="d" Padding="0" MinHeight="50">

	<Grid>
		<StackPanel Orientation="Vertical">
			<TextBlock Text="{Binding Icon}" FontFamily="Segoe UI Symbol" Padding="0,3"/>
			<TextBlock Text="{Binding Title}" FontSize="12" Padding="0">
				<TextBlock.LayoutTransform>
					<RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
				</TextBlock.LayoutTransform>
			</TextBlock>
		</StackPanel>
		<Button Command="{Binding CommandTabClicked}" Background="{x:Null}">
		</Button>
	</Grid>

</UserControl>
