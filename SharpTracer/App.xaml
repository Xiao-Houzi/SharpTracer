<Application x:Class="SharpTracer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SharpTracer"
             xmlns:viewModels="clr-namespace:SharpTracer.ViewModels"
             xmlns:controls="clr-namespace:SharpTracer.View.Controls"
             Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Themes/AelfcraeftTheme.xaml"/>
                <ResourceDictionary >
                    <!-- Templated Views For ViewModels -->

                    <!-- Controls -->
                    <DataTemplate DataType="{x:Type viewModels:GeometryList}">
                        <controls:GeometryListView/>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type viewModels:EntityVM}">
                        <controls:EntityView/>
                    </DataTemplate>

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
