<UserControl x:Class="SharpTracer.Base.LogTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpTracer.Base"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450">
	<UserControl.Resources>
		<DataTemplate x:Key="LogTemplate">
			<DockPanel Width="Auto" HorizontalAlignment="Stretch">
				<TextBlock Text="{Binding MessageIcon}" Name="img" ToolTip="Icon" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" />
                <TextBlock Text="{Binding Message}" Width="Auto" Margin="4,0,0,0"/>
			</DockPanel>
		</DataTemplate>
	</UserControl.Resources>
	<DockPanel>
		<DataGrid Name="Grid" ItemsSource="{Binding Items}" AutoGenerateColumns="False" HeadersVisibility="None">
			<DataGrid.Columns>
				<DataGridTemplateColumn CellTemplate="{StaticResource LogTemplate}" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</UserControl>
